@model UserModel
@{
    ViewData["Title"] = "Listagem de Usuários";
}
<div class="text-center">

    <h3>Deseja realmente apagar o Usuário(@Model.Name) ?</h3>
</div>

<a class="btn btn-primary  btn-block" asp-action="Index" asp-controller="User" role="button">Cancelar</a>
<a class="btn btn-danger btn-block" asp-action="Delete" asp-controller="User" asp-route-id="@Model.Id" role="button">Confirmar</a>



