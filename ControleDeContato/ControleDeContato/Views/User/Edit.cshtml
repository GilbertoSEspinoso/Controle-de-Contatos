@using ControleDeContato.Enums;
@model UserModel
@{
    ViewData["Title"] = "Editar Usuário";
}

<div id="area-principal">
    <div class="centralizarTexto">
        <h1 class="display-4">@ViewData["Title"]</h1>
    </div>

    <div class="postagem">

        <form asp-controler="User" asp-action="Edit" method="post">

            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label for="name" class="form-label"></label>
                <input type="text" asp-for="Name" class="form-control" placeholder="Digite o nome de usuário">
                @Html.ValidationMessageFor(x => x.Name)
            </div>

            <div class="form-group">
                <label for="email" class="form-label"></label>
                <input type="text" asp-for="Email" class="form-control" placeholder="Digite o e-mail do usuário">
                @Html.ValidationMessageFor(x => x.Email)
            </div>

            <div class="form-group">
                <label for="login" class="form-label"></label>
                <input type="text" asp-for="Login" class="form-control" placeholder="Digite o Login de usuário">
                @Html.ValidationMessageFor(x => x.Login)
            </div>

            <div class="form-group">
                <label for="perfil" class="form-label"></label>
                <select asp-for="Perfil" class="form-control">
                    <option value="">Selecione</option>
                    <option value="@PerfilEnum.Admin">Administrador</option>
                    <option value="@PerfilEnum.Patter">Padrão</option>
                </select>
                @Html.ValidationMessageFor(x => x.Perfil)
            </div>


            <button type="submit" class="btn btn-primary btn-block">Editar</button>
            <a class="btn btn-secondary btn-block" asp-controller="User" asp-action="Index" role="button">Voltar</a>

        </form>
    </div>
</div>

