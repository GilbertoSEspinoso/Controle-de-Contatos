@model List<ContactModel>
@{
    ViewData["Title"] = "Agenta de contatos";
}

<div>

    <!--Notificacao-->
    @if (TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-success" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" aria-label="Close">X</button>
            @TempData["MensagemSucesso"]
        </div>
    }

    @if (TempData["MensagemError"] != null)
    {
        <div class="alert alert-danger" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" aria-label="Close">X</button>
            @TempData["MensagemError"]
        </div>
    }

</div>


<div id="area-principal">

    <div>
        <h2 class="display-4 centralizarTexto">@ViewData["Title"]</h2>
    </div>
    <!--Inicio da tabela-->
    <div class="postagem">

        <table id="table-contatos" class="display">
            <thead>
                <tr class="bg-dark text-white">
                    <th scope="col">Id</th>
                    <th scope="col">Nome</th>
                    <th scope="col">E-mail</th>
                    <th scope="col">Celular</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (ContactModel contact in Model)
                    {
                        <tr>
                            <th scope="row">@contact.Id</th>
                            <td>@contact.Name</td>
                            <td>@contact.Email</td>
                            <td>@contact.Phone</td>
                            <td>
                                <div class="btn-block" role="grid">
                                    <a role="button" asp-action="Edit" asp-controller="Contact" asp-route-id="@contact.Id" class="btn btn-primary btn-sm">Editar</a>
                                    <a role="button" asp-action="DeleteContact" asp-controller="Contact" asp-route-id="@contact.Id" class="btn btn-danger btn-sm">excluir</a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr class="odd"><td valign="top" colspan="5">Nenhum usuário encontrato</td></tr>
                }
            </tbody>
        </table>
        <!--final da tabela-->
        <!--Button-->
        <div class="d-grid gap-2 d-md-flex justify-content-md-start">
            <a class="btn btn-dark" asp-controller="Contact" asp-action="Create" role="button">Cadastrar um novo contato</a>
        </div>

        <br />

    </div>

    
</div>


