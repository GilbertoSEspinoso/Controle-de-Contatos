@model ContactModel
@{
    ViewData["Title"] = "Editar contato";
}

<div id="area-principal">

    <div class="centralizarTexto">
        <h1 class="display-4">@ViewData["Title"]</h1>
    </div>

    <div class="postagem">


        <form asp-controler="Contact" asp-action="Change" method="post">

            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label for="name"></label>
                <input type="text" asp-for="Name" class="form-control" placeholder="Digite o nome do contato">
                @Html.ValidationMessageFor(x => x.Name)
            </div>

            <div class="form-group">
                <label for="email"></label>
                <input type="text" asp-for="Email" class="form-control" placeholder="Digite o e-mail do contato">
                @Html.ValidationMessageFor(x => x.Email)
            </div>

            <div class="form-group">
                <label for="phone"></label>
                <input type="text" asp-for="Phone" class="form-control" placeholder="Digite o celular do contato">
                @Html.ValidationMessageFor(x => x.Phone)
            </div>

            <button type="submit" class="btn btn-primary btn-block">Salvar alterações</button>
            <a class="btn btn-secondary btn-block" asp-controller="Contact" asp-action="Index">Voltar</a>

        </form>
    </div>

</div>


