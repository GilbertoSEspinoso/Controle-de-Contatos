@model RedefinirSenhaModel
@{
    Layout = "_LayoutLoggedOff";
    ViewData["Title"] = "Redefinir a senha";
}
@if (TempData["MensagemError"] != null)
{
    <div class="alert alert-danger" role="alert">
        <button type="button" class="btn btn-danger btn-sm close-alert" aria-label="Close">X</button>
        @TempData["MensagemError"]
    </div>
}



<form asp-controller="Login" asp-action="EnviarLinkRedefinirSenha" method="post">
    <!--Login-->
    <div class="mb-3">
        <label for="login" class="form-label">Login</label>
        <input type="text" asp-for="Login" class="form-control" id="login">
        @Html.ValidationMessageFor(x => x.Login)
    </div>

    <!--Password-->
    <div class="mb-3">
        <label for="email" class="form-label">E-mail</label>
        <input type="text" asp-for="Email" class="form-control" id="email">
        @Html.ValidationMessageFor(x => x.Email)
    </div>

    <!--Button redefinir -->
    <button type="submit" class="btn btn-primary btn-block">Redefinir a Senha</button>

    <a class="btn btn-secondary btn-block" asp-controller="Login" asp-action="Index">Voltar</a>
</form>

